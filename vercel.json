{
  "version": 2,
  "name": "learn-taiwanese-pro",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*\\.(html|css|js|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot|mp3|mp4|wav))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "GOOGLE_CLIENT_ID": "@google_client_id",
    "GOOGLE_CLIENT_SECRET": "@google_client_secret",
    "GEMINI_API_KEY": "@gemini_api_key",
    "NODE_ENV": "production"
  },
  "regions": ["sin1"],
  "functions": {
    "api/index.js": {
      "maxDuration": 10
    }
  }
}
